<UserControl x:Class="JottyCRM.View.Components.Layout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:JottyCRM.View.Components"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <local:NavBar Grid.Column="0" DataContext="{Binding NavbarViewModel_}" Margin="30 0 0 0"></local:NavBar>
        
        <ContentControl Grid.Column="1" Margin="50 0 0 0 " Content="{Binding CurrentViewModel}"></ContentControl>
    </Grid>
</UserControl>
